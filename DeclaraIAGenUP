    <script>
        let currentStep = 1;
        const totalSteps = 6;
        const formData = {};
        let contadorAutores = 1;
        
        function agregarAutor() {
            contadorAutores++;
            const container = document.getElementById('autoresContainer');
            
            const nuevaCard = document.createElement('div');
            nuevaCard.className = 'autor-card';
            nuevaCard.setAttribute('data-autor', contadorAutores);
            nuevaCard.innerHTML = `
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                    <h3 style="color: #667eea; margin: 0;">Autor ${contadorAutores}</h3>
                    <button class="btn-remove-autor" onclick="eliminarAutor(${contadorAutores})">‚úï Eliminar</button>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 15px; margin-bottom: 15px;">
                    <div class="form-group" style="margin-bottom: 0;">
                        <label>Nombre(s): *</label>
                        <input type="text" class="autor-nombre" data-autor="${contadorAutores}" placeholder="Ej: Juan Carlos">
                    </div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <label>Primer Apellido: *</label>
                        <input type="text" class="autor-apellido1" data-autor="${contadorAutores}" placeholder="Ej: P√©rez">
                    </div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <label>Segundo Apellido:</label>
                        <input type="text" class="autor-apellido2" data-autor="${contadorAutores}" placeholder="Ej: Garc√≠a">
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Correo electr√≥nico: *</label>
                    <input type="email" class="autor-email" data-autor="${contadorAutores}" placeholder="Ej: juan.perez@universidad.edu">
                </div>
                
                <div class="form-group">
                    <label>Afiliaci√≥n institucional: *</label>
                    <input type="text" class="autor-afiliacion" data-autor="${contadorAutores}" placeholder="Ej: Universidad Nacional, Facultad de Ciencias">
                </div>
            `;
            
            container.appendChild(nuevaCard);
        }
        
        function eliminarAutor(numeroAutor) {
            const card = document.querySelector(`.autor-card[data-autor="${numeroAutor}"]`);
            if (card) {
                card.remove();
            }
        }
        
        function obtenerAutores() {
            const autores = [];
            const cards = document.querySelectorAll('.autor-card');
            
            cards.forEach((card, index) => {
                const numero = card.getAttribute('data-autor');
                const nombre = card.querySelector(`.autor-nombre[data-autor="${numero}"]`).value.trim();
                const apellido1 = card.querySelector(`.autor-apellido1[data-autor="${numero}"]`).value.trim();
                const apellido2 = card.querySelector(`.autor-apellido2[data-autor="${numero}"]`).value.trim();
                const email = card.querySelector(`.autor-email[data-autor="${numero}"]`).value.trim();
                const afiliacion = card.querySelector(`.autor-afiliacion[data-autor="${numero}"]`).value.trim();
                
                if (nombre || apellido1 || email || afiliacion) {
                    const nombreCompleto = `${nombre} ${apellido1}${apellido2 ? ' ' + apellido2 : ''}`.trim();
                    autores.push({
                        numero: index + 1,
                        nombre: nombre,
                        apellido1: apellido1,
                        apellido2: apellido2,
                        nombreCompleto: nombreCompleto,
                        email: email,
                        afiliacion: afiliacion
                    });
                }
            });
            
            return autores;
        }
        
        function updateProgress() {
            const progress = ((currentStep - 1) / (totalSteps - 1)) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
            
            document.querySelectorAll('.step').forEach((step, index) => {
                const stepNum = index + 1;
                step.classList.remove('active', 'completed');
                if (stepNum === currentStep) {
                    step.classList.add('active');
                } else if (stepNum < currentStep) {
                    step.classList.add('completed');
                }
            });
            
            document.querySelectorAll('.step-content').forEach((content, index) => {
                content.classList.remove('active');
                if (index + 1 === currentStep) {
                    content.classList.add('active');
                }
            });
        }
        
        function validateStep() {
            if (currentStep === 1) {
                const autores = obtenerAutores();
                
                if (autores.length === 0) {
                    alert('Debe agregar al menos un autor');
                    return false;
                }
                
                const primerAutor = autores[0];
                if (!primerAutor.nombre || !primerAutor.apellido1 || !primerAutor.email || !primerAutor.afiliacion) {
                    alert('Por favor complete todos los campos obligatorios del primer autor (Nombre, Primer Apellido, Email y Afiliaci√≥n)');
                    return false;
                }
                
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                for (let autor of autores) {
                    if (autor.email && !emailRegex.test(autor.email)) {
                        alert(`El email del Autor ${autor.numero} no es v√°lido`);
                        return false;
                    }
                }
                
                for (let i = 1; i < autores.length; i++) {
                    if (!autores[i].nombre || !autores[i].apellido1 || !autores[i].email || !autores[i].afiliacion) {
                        alert(`Por favor complete todos los campos obligatorios del Autor ${autores[i].numero} o elim√≠nelo`);
                        return false;
                    }
                }
                
                const resp = document.querySelector('input[name="responsabilidad"]:checked');
                if (!resp) {
                    alert('Por favor seleccione la responsabilidad de los autores');
                    return false;
                }
            }
            
            if (currentStep === 2) {
                const llm1 = document.getElementById('llm1').value.trim();
                const version1 = document.getElementById('version1').value.trim();
                const proveedor1 = document.getElementById('proveedor1').value.trim();
                const fecha1 = document.getElementById('fecha1').value;
                
                if (!llm1 || !version1 || !proveedor1 || !fecha1) {
                    alert('Por favor complete todos los campos obligatorios del primer LLM');
                    return false;
                }
            }
            
            if (currentStep === 4) {
                const titulo = document.getElementById('titulo').value.trim();
                const descripcion = document.getElementById('descripcion').value.trim();
                
                if (!titulo || !descripcion) {
                    alert('Por favor complete el t√≠tulo y la descripci√≥n del uso de IAGen');
                    return false;
                }
            }
            
            return true;
        }
        
        function collectFormData() {
            formData.autores = obtenerAutores();
            formData.responsabilidad = document.querySelector('input[name="responsabilidad"]:checked')?.value || '';
            
            formData.llm1 = document.getElementById('llm1').value;
            formData.version1 = document.getElementById('version1').value;
            formData.proveedor1 = document.getElementById('proveedor1').value;
            formData.fecha1 = document.getElementById('fecha1').value;
            formData.llm2 = document.getElementById('llm2').value;
            formData.version2 = document.getElementById('version2').value;
            formData.proveedor2 = document.getElementById('proveedor2').value;
            formData.fecha2 = document.getElementById('fecha2').value;
            
            formData.areas = [];
            for (let i = 1; i <= 40; i++) {
                const checkbox = document.getElementById('area' + i);
                if (checkbox && checkbox.checked) {
                    formData.areas.push(checkbox.value);
                }
            }
            
            formData.titulo = document.getElementById('titulo').value;
            formData.descripcion = document.getElementById('descripcion').value;
            formData.comentarios = document.getElementById('comentarios').value;
        }
        
        function showSummary() {
            collectFormData();
            
            const autoresNombres = formData.autores.map(a => a.nombreCompleto).join(', ');
            
            let html = `
                <div class="summary-card">
                    <div class="summary-item">
                        <div class="summary-label">Autores (${formData.autores.length}):</div>
                        <div class="summary-value">`;
            
            formData.autores.forEach((autor, index) => {
                html += `
                    <div style="margin-bottom: 10px; padding: 10px; background: white; border-radius: 4px;">
                        <strong>Autor ${index + 1}:</strong> ${autor.nombreCompleto}<br>
                        <span style="color: #666; font-size: 13px;">
                            ${autor.email} | ${autor.afiliacion}
                        </span>
                    </div>
                `;
            });
            
            html += `
                        </div>
                    </div>
                    
                    <div class="summary-item">
                        <div class="summary-label">Responsabilidad:</div>
                        <div class="summary-value">${formData.responsabilidad}</div>
                    </div>
                    
                    <div class="summary-item">
                        <div class="summary-label">Modelos utilizados:</div>
                        <div class="summary-value">
                            ${formData.llm1} (${formData.version1}) - ${formData.proveedor1}<br>
                            ${formData.llm2 ? formData.llm2 + ' (' + formData.version2 + ') - ' + formData.proveedor2 : ''}
                        </div>
                    </div>
                    
                    <div class="summary-item">
                        <div class="summary-label">T√≠tulo del trabajo:</div>
                        <div class="summary-value">${formData.titulo}</div>
                    </div>
                    
                    <div class="summary-item">
                        <div class="summary-label">√Åreas de intervenci√≥n seleccionadas (${formData.areas.length}):</div>
                        <ul class="summary-list">
                            ${formData.areas.slice(0, 5).map(area => '<li>' + area + '</li>').join('')}
                            ${formData.areas.length > 5 ? '<li><em>... y ' + (formData.areas.length - 5) + ' m√°s</em></li>' : ''}
                        </ul>
                    </div>
                </div>
            `;
            
            document.getElementById('summaryContent').innerHTML = html;
        }
        
        function generateDocuments() {
            collectFormData();
            
            const today = new Date().toLocaleDateString('es-ES', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            });
            
            let autoresHTML = '';
            formData.autores.forEach((autor, index) => {
