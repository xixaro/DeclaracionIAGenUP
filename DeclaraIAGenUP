            formData.autores.forEach((autor) => {
                autoresCartaHTML += `
                    <br><br>
                    <p>_________________________</p>
                    <p>${autor.nombreCompleto}</p>
                    <p>${autor.email}</p>
                    <p>${autor.afiliacion}</p>
                `;
            });
            
            const letterHTML = `
